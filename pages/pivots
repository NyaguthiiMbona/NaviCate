const formatRoleName = (role: string) =>
  role.split("-").map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(" ");

export default function PivotsPage() {
  return (
    <>
      <Head>
        <title>Explore Career Pivots | NaviCate</title>
        <meta
          name="description"
          content="Explore 80+ data-driven career pivots and discover your next professional opportunity with NaviCate."
        />
      </Head>

      <div className="min-h-screen bg-gradient-to-b from-blue-50 to-white py-10 px-4">
        <div className="max-w-5xl mx-auto text-center mb-10">
          <h1 className="text-4xl font-bold text-gray-900 mb-3">Explore All Career Pivots</h1>
          <p className="text-gray-700 text-lg">
            Browse 80+ future-ready job transitions and discover your next career move.
          </p>
        </div>

        <div className="grid gap-4 grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 max-w-6xl mx-auto">
          {pivotRoles.map(role => (
            <Link
              key={role}
              href={`/pivot/${role}`}
              className="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow p-3 text-center text-sm font-medium text-gray-700 hover:text-blue-600"
            >
              {formatRoleName(role)}
            </Link>
          ))}
        </div>

        <div className="text-center mt-12">
          <Link
            href="/"
            className="text-blue-600 hover:underline text-sm"
          >
            ‚Üê Back to Home
          </Link>
        </div>
      </div>
    </>
  );
}
